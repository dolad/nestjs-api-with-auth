<table
  style="
    background-color: rgba(9, 249, 191, 0.1);
    padding: 15px 15px 40px 15px;
    margin-bottom: 10px;
    font-family: arial;
  "
  border="0"
  width="100%"
  cellspacing="0"
  cellpadding="0"
  align="center"
>
  <tbody>
    <tr>
      <td>
        <table
          class="MainContainer"
          style="
            margin: 0 auto;
            margin-top: 80px;
            max-width: 600px;
            border-radius: 8px;
            overflow: hidden;
            background: #fff;
          "
          border="0"
          width="600px"
          cellspacing="0"
          cellpadding="0"
          align="center"
        >
          <thead>
            <tr>
              <td
                style="
                  background: #fff;
                  max-width: 600px;
                  display: -webkit-flex;
                  display: -ms-flexbox;
                  display: flex;
                "
              >
        
               
              </td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td
                style="
                  width: 600px;
                  height: 201px;
                  display: -webkit-flex;
                  display: -ms-flexbox;
                  display: flex;
                  background: linear-gradient(
                    112.65deg,
                    #11d8b5 -6.34%,
                    #1aa0c1 85.44%
                  );
                  color: #fff;
                "
              >
                <h2 style="padding-left: 20px; margin-top: 70px">
                  <div style="font-weight: 100">Welcome to</div>
                  Flinke
                </h2>

            
              </td>
            </tr>
            <tr style="background: #fff">
              <td style="padding: 30px; max-width: 600px; color: #003042">
                <h1
                  style="
                    font-size: 24px;
                    line-height: 36px;
                    margin-bottom: 20px;
                    text-align: left;
                  "
                >
                  Hi, {{firstName}}
                </h1>
                <p
                  style="
                    font-size: 16px;
                    line-height: 24px;
                    margin-bottom: 25px;
                    text-align: left;
                  "
                >
                  An Admin Account has been created for you with a default password:
                  <br />
                  {{password}}
                   <br />
                  Kindly login with  email and {{password}}, then updated to your password of choice to avoid security breach
                </p>

             
                <p
                  style="
                    color: #003042;
                    font-size: 16px;
                    line-height: 24px;
                    text-align: left;
                    margin: 18px 0 0 0;
                  "
                >
                  Regards,
                </p>
                <h6
                  style="
                    color: #003042;
                    font-size: 16px;
                    line-height: 24px;
                    text-align: left;
                    font-weight: bold;
                    margin: 0;
                  "
                >
                  Team Flinke
                </h6>
               
                <p
                  style="
                    font-size: 14px;
                    line-height: 24px;
                    text-align: center;
                    margin: 20px 0 0 0;
                  "
                >
                  &copy; {{year}} flinke.io. All rights reserved
                  
                </p>

                
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>